def chatbot():
    responses = {
        "hello": "Hi!",
        "how are you": "I'm fine, thanks!",
        "bye": "Goodbye!"
    }

    print("Chatbot is running... Type 'bye' to exit.")
    while True:
        user_input = input("You: ").lower()
        if user_input in responses:
            print("Bot:", responses[user_input])
            if user_input == "bye":
                break
        else:
            print("Bot: I don't understand.")

chatbot()
